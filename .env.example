# 🚀 Centro de Estética Lucy Lara - Configuración de Entorno
# Copia este archivo a .env y configura tus valores reales

# 📧 Configuración de Email
GMAIL_USER=tu-email@gmail.com
GMAIL_PASS=tu-contraseña-de-aplicacion-gmail
SALON_EMAIL=tu-email@gmail.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# 🤖 Configuración del Chatbot
DEEPSEEK_API_KEY=tu-api-key-aqui

# 🌐 Configuración de la aplicación
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:5000
CORS_ORIGIN=http://localhost:5173
API_BASE_URL=http://localhost:5000
PORT=5000
HOST=localhost

# 🗄️ Base de datos
DATABASE_URL=postgresql://username:password@localhost:5432/lucylara

# 🔒 Seguridad
SESSION_SECRET=your_super_secret_session_key_here
JWT_SECRET=your-jwt-secret-key-here

# 🚦 Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 📊 Analytics (opcional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
